<!DOCTYPE html>
<html>
<head>
  <title>Page 3</title>
  <link rel="stylesheet" type="text/css" href="Mainstyle.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

 <script>
  function checkboxes(event) {
    
    event.preventDefault();

   
    document.getElementById("Name").style.backgroundColor = "";
    document.getElementById("Email").style.backgroundColor = "";

    let valid = true;

   
    var Name = document.getElementById("Name").value;
    if (Name === "") {
      document.getElementById("Name").focus();
      document.getElementById("Name").style.backgroundColor = "red";
      alert("Please enter your name.");
      valid = false;
    }

    var Email = document.getElementById("Email").value;
    if (Email === "") {
      document.getElementById("Email").focus();
      document.getElementById("Email").style.backgroundColor = "red";
      alert("Please enter your email.");
      valid = false;
    }

    var termsAccepted = document.querySelector('input[name="Terms"]:checked');
    if (!termsAccepted) {
      alert("Please select one (Accept or Deny) for Terms of Use.");
      valid = false;
    }

  
    if (valid) {
      event.target.closest("form").submit();
    }
  }
</script>

</head>
<body>
  <h1>Contact Us</h1>

  <form action="nextPage.html" method="post" >
    Name: <input type="text" id="Name"><br>
    Email: <input type="text" id="Email"><br>

    <span>Do you accept the terms of use?</span><br>
    <input type="radio" name="Terms" value="Accept">Accept<br>
    <input type="radio" name="Terms" value="Deny">Deny<br>

    <button type="submit" class="btn btn-primary" onclick='checkboxes(event);'>Submit</button>
  </form>

  <p><a href="homework6.html" target="_blank" style="color: black;">Home Page</a></p>
  <p><a href="hw6/2.html" target="_blank" style="color: black;">Page 2</a></p>

  <button type="button" class="btn btn-outline-secondary">Contact Us</button>
</body>
